.moon
  position relative
  display flex
  justify-content center
  align-items center
  width 5rem
  height 5rem
  top 2.2rem
  border-radius 50%
  background-color var(--color-moon)
  &:before
    content ''
    position absolute
    width 50.6rem
    height 50.6rem
    z-index -1
    background radial-gradient(ellipse at center, rgba(14,103,163,1) 0%, rgba(14,91,149,1) 32%, rgba(12,79,131,1) 32%, rgba(12,79,131,1) 39%, rgba(10,70,112,1) 39%, rgba(6,41,66,1) 100%)

.moon-craters
  position absolute
  border-radius 50%
  background-color var(--color-moon-crater)
  width 1.25rem
  height 1.25rem
  left 2.3rem
  top 1.3rem
  &:before
  &:after
    content ''
    position absolute
    background-color inherit
    border-radius inherit
  &:before
    width 0.7rem
    height 0.7rem
    left 0.4rem
    top 2.1rem
  &:after
    width 0.37rem
    height 0.37rem
    left -1.5rem
    top 1.7rem

