$heart-width = 1.6rem

.hearts
  position absolute
  width 100%
  height 100%
  z-index 2

.heart
  display inline-flex
  justify-content center
  align-items center
  position absolute
  animation-duration $animation-duration
  animation-timing-function linear
  animation-fill-mode forwards
  animation-iteration-count infinite

.heart-body
  width $heart-width
  height $heart-width
  position relative
  transform rotate(47deg) scale(0)
  animation-duration $animation-duration
  animation-timing-function linear
  animation-fill-mode forwards
  animation-iteration-count infinite

  &:before
    content ''
    position absolute
    top 0.2rem
    left -($heart-width / 2)
    width ($heart-width * 1.5)
    height $heart-width
    background get-color(heart)
    border-radius 1rem 0 0.3rem 1rem
  &:after
    content ''
    position absolute
    left 0.2rem
    top -($heart-width / 2)
    height ($heart-width * 1.5)
    width $heart-width
    background get-color(heart)
    border-radius 1rem 1rem 0.3rem 0
  &>div
    position absolute
    width ($heart-width / 2)
    height ($heart-width / 2)
    border-radius 50%
    right -0.2rem
    bottom -0.2rem
    background-color get-color(heart)

.heart-splashes
  position absolute
  width ($heart-width * 4)
  height ($heart-width * 4)
  border-radius 50%
  display flex
  justify-content center
  align-items flex-start

.splash
  $distance = ($heart-width * 2)
  $splash-height = 0.9rem
  $splash-width = 0.2rem
  &:before  
  &:after
    content ''
    position absolute
    width $splash-width
    height $splash-height
    transform-origin 0 $distance
    border-radius 0.1rem
    background transparent
    animation-duration $animation-duration
    animation-timing-function linear
    animation-fill-mode forwards
    animation-iteration-count infinite

  for i in 0..3
    $step = i * 90
    &:nth-child({i+1}):before
      transform rotate(unquote('' + $step + 'deg'))
    &:nth-child({i+1}):after
      transform rotate(unquote('' + ($step + 45) + 'deg'))


.heart-1
.heart-2
  bottom 13rem
  right 5.6rem
  transform rotate(47deg)

.heart-3
  top 8.5rem
  left 9rem

for num in (1..3)
  {'.heart-' + num}
    animation-name unquote('heart-' + num + '-move')
    .heart-body
      animation-name unquote('heart-' + num + '-scale')
    .splash
      &:before
      &:after
        animation-name unquote('heart-' + num + '-splash')


