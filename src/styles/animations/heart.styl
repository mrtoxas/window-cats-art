// animated heart-splash mixin
heart-splash(name, start)
  @keyframes {name + '-splash'}
    0%
      background transparent
    +frame-percent(start - 0.01)
      background transparent
    +frame-percent(start)
      background linear-gradient(to top, transparent 20%, white 20%, white 100%, transparent 100%)
    +frame-percent(start + 0.08)
      background linear-gradient(to top, transparent 50%, white 50%, white 100%, transparent 100%)
    +frame-percent(start + 0.08 + 0.08)
      background linear-gradient(to top, transparent 75%, white 75%, white 100%, transparent 100%)
    +frame-percent(start + 0.08 + 0.08 + 0.1)
      background transparent
    100%
      background transparent

