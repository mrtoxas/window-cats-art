  +frame-percent(0.84)
    transform rotate(47deg) scale(0.4)

  +frame-percent(0.9)
    transform rotate(47deg) scale(0.4)

  +frame-percent(0.91)
    transform rotate(47deg) scale(0.6)

  +frame-percent(1.09)
    transform rotate(47deg) scale(0.4)

  +frame-percent(3)
    transform rotate(77deg) scale(1)

  +frame-percent(3.01)
    transform scale(0)

  100%
    transform scale(0)

