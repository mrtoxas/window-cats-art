// ** Heart1

@keyframes heart-1-move
  0%
    transform rotate(0deg) translateX(0)

  +frame-percent(0.97)
    transform rotate(0deg) translateX(0)

  +frame-percent(2.87)
    transform rotate(-30deg) translateX(120px) translateY(-120px)

  100%
    transform rotate(-30deg) translateX(120px) translateY(-120px)

@keyframes heart-1-scale
  0%
    transform rotate(47deg) scale(0)

  +frame-percent(0.76)
    transform scale(0)

  +frame-percent(0.77)
    transform rotate(47deg) scale(0.1)

  +frame-percent(0.83)
    transform rotate(47deg) scale(0.1)

  +frame-percent(0.84)
    transform rotate(47deg) scale(0.4)

  +frame-percent(0.9)
    transform rotate(47deg) scale(0.4)

  +frame-percent(0.91)
    transform rotate(47deg) scale(0.6)

  +frame-percent(1.09)
    transform rotate(47deg) scale(0.4)

  +frame-percent(3)
    transform rotate(77deg) scale(1)

  +frame-percent(3.01)
    transform scale(0)

  100%
    transform scale(0)

@keyframes heart-1-splash
  0%
    background transparent
  +frame-percent(2.86)
    background transparent
  +frame-percent(2.87)
    background linear-gradient(to top, transparent 20%, white 20%, white 100%, transparent 100%)
  +frame-percent(2.95)
    background linear-gradient(to top, transparent 50%, white 50%, white 100%, transparent 100%)
  +frame-percent(3.02)
    background linear-gradient(to top, transparent 75%, white 75%, white 100%, transparent 100%)
  +frame-percent(3.12)
    background transparent
  100%
    background transparent

